@model AccommodationPageViewModel
@inject IStringLocalizer<SharedResource> Localizer

<section class="page-hero compact py-5 bg-light" aria-labelledby="accommodation-title">
    <div class="container">
        <h1 id="accommodation-title">@Localizer["Nav.Accommodation"]</h1>
        <p class="lead mb-0">@Localizer["Accommodation.Intro"]</p>
    </div>
</section>

<section class="py-4" aria-label="@Localizer["Accommodation.Filter.Title"]">
    <div class="container">
        <div class="filter-panel" data-room-filters>
            <div class="row g-3">
                <div class="col-md-2">
                    <label for="capacityFilter" class="form-label">@Localizer["Accommodation.Filter.Capacity"]</label>
                    <select id="capacityFilter" class="form-select" data-filter="capacity">
                        <option value="">@Localizer["Common.All"]</option>
                        <option value="2">2+</option>
                        <option value="3">3+</option>
                        <option value="4">4+</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="minSizeFilter" class="form-label">@Localizer["Accommodation.Filter.MinSize"]</label>
                    <select id="minSizeFilter" class="form-select" data-filter="min-size">
                        <option value="">@Localizer["Common.All"]</option>
                        <option value="30">30 m²+</option>
                        <option value="40">40 m²+</option>
                        <option value="60">60 m²+</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="viewFilter" class="form-label">@Localizer["Accommodation.Filter.View"]</label>
                    <select id="viewFilter" class="form-select" data-filter="view">
                        <option value="">@Localizer["Common.All"]</option>
                        <option value="sea">@Localizer["View.sea"]</option>
                        <option value="garden">@Localizer["View.garden"]</option>
                        <option value="marina">@Localizer["View.marina"]</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="bedFilter" class="form-label">@Localizer["Accommodation.Filter.Bed"]</label>
                    <select id="bedFilter" class="form-select" data-filter="bed">
                        <option value="">@Localizer["Common.All"]</option>
                        <option value="king">@Localizer["Bed.king"]</option>
                        <option value="twin">@Localizer["Bed.twin"]</option>
                        <option value="queen">@Localizer["Bed.queen"]</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="poolFilter" class="form-label">@Localizer["Accommodation.Filter.PrivatePool"]</label>
                    <select id="poolFilter" class="form-select" data-filter="pool">
                        <option value="">@Localizer["Common.All"]</option>
                        <option value="true">@Localizer["Common.Yes"]</option>
                        <option value="false">@Localizer["Common.No"]</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="pb-5">
    <div class="container">
        <div class="row g-4" data-room-grid>
            @foreach (var room in Model.Rooms)
            {
                var roomTitle = Localizer[room.TitleKey].Value;
                var viewValue = Localizer[$"View.{room.ViewType}"].Value;
                var bedValue = Localizer[$"Bed.{room.BedType}"].Value;
                var poolValue = room.HasPrivatePool ? Localizer["Common.Yes"].Value : Localizer["Common.No"].Value;
                var detailUrl = Url.Action("AccommodationDetail", "Site", new { culture = Model.Page.Culture, slug = room.Slug }) ?? "#";

                <div class="col-md-6 col-xl-4 room-card" data-room-item data-capacity="@room.Capacity" data-size="@room.SizeSqm" data-view="@room.ViewType" data-bed="@room.BedType" data-pool="@room.HasPrivatePool.ToString().ToLowerInvariant()">
                    <article class="liquid-card h-100">
                        <div class="liquid-media">
                            <img src="@room.Images.FirstOrDefault()" class="card-img-top" width="640" height="360" alt="@roomTitle" loading="lazy" />
                        </div>
                        <div class="liquid-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start gap-2 mb-2">
                                <h2 class="liquid-title display-font h5 mb-0">@roomTitle</h2>
                                <label class="compare-toggle">
                                    <input type="checkbox"
                                           data-room-compare-toggle
                                           data-room-id="@room.Slug"
                                           data-room-title="@roomTitle"
                                           data-room-size="@room.SizeSqm"
                                           data-room-capacity="@room.Capacity"
                                           data-room-view="@viewValue"
                                           data-room-bed="@bedValue"
                                           data-room-pool="@poolValue"
                                           data-room-price="@room.StartingPrice.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                           data-room-url="@detailUrl" />
                                    <span>@Localizer["Accommodation.Compare.Select"]</span>
                                </label>
                            </div>
                            <div class="liquid-rule"></div>
                            <p class="liquid-desc">@Localizer[room.ShortDescriptionKey]</p>
                            <p class="room-price mb-2">@Localizer["Accommodation.Price.From"]: <strong>@room.StartingPrice.ToString("N0") @Localizer["Home.Availability.Currency"]</strong></p>
                            <ul class="list-inline small mb-3 text-secondary">
                                <li class="list-inline-item">@room.SizeSqm m²</li>
                                <li class="list-inline-item">@Localizer["Common.Capacity"]: @room.Capacity</li>
                                <li class="list-inline-item">@viewValue</li>
                            </ul>
                            <ul class="feature-list mb-3">
                                @foreach (var featureKey in room.FeaturesKeys.Take(3))
                                {
                                    <li>@Localizer[featureKey]</li>
                                }
                            </ul>
                            <div class="liquid-actions">
                                <a href="@detailUrl" class="btn btn-outline-dark">@Localizer["Common.Details"]</a>
                                <a href="@Model.Page.BookingUrl" class="btn btn-gold">@Localizer["Common.BookNow"]</a>
                            </div>
                        </div>
                    </article>
                </div>
            }
        </div>
        <p data-room-empty class="alert alert-light mt-4 d-none">@Localizer["Accommodation.Filter.Empty"]</p>

        <div class="room-compare-bar d-none"
             data-room-compare-bar
             data-currency="@Localizer["Home.Availability.Currency"]"
             data-details-label="@Localizer["Common.Details"]"
             data-max-message="@Localizer["Accommodation.Compare.MaxMessage"]">
            <div>
                <p class="mb-1 fw-semibold">@Localizer["Accommodation.Compare.Title"]</p>
                <div class="room-compare-list" data-room-compare-list></div>
            </div>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-dark btn-sm" data-room-compare-clear>@Localizer["Accommodation.Compare.Clear"]</button>
                <button type="button" class="btn btn-gold btn-sm" data-room-compare-open data-bs-toggle="modal" data-bs-target="#roomCompareModal">@Localizer["Accommodation.Compare.Button"]</button>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="roomCompareModal" tabindex="-1" aria-labelledby="roomCompareModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title h5" id="roomCompareModalTitle">@Localizer["Accommodation.Compare.ModalTitle"]</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-sm align-middle compare-table">
                        <thead>
                            <tr>
                                <th>@Localizer["Accommodation.Compare.Col.Room"]</th>
                                <th>@Localizer["Accommodation.Compare.Col.Price"]</th>
                                <th>@Localizer["Accommodation.Compare.Col.Size"]</th>
                                <th>@Localizer["Accommodation.Compare.Col.Capacity"]</th>
                                <th>@Localizer["Accommodation.Compare.Col.View"]</th>
                                <th>@Localizer["Accommodation.Compare.Col.Bed"]</th>
                                <th>@Localizer["Accommodation.Compare.Col.PrivatePool"]</th>
                                <th>@Localizer["Accommodation.Compare.Col.Action"]</th>
                            </tr>
                        </thead>
                        <tbody data-room-compare-table></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
