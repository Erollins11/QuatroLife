@model DiningPageViewModel
@inject IStringLocalizer<SharedResource> Localizer

<section class="page-hero compact py-5 bg-light" aria-labelledby="dining-title">
    <div class="container">
        <h1 id="dining-title">@Localizer["Nav.Dining"]</h1>
        <p class="lead mb-0">@Localizer["Dining.Intro"]</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            @foreach (var restaurant in Model.Restaurants)
            {
                <div class="col-md-6 col-xl-4">
                    <article class="card h-100 border-0 shadow-sm">
                        <img src="@restaurant.Images.FirstOrDefault()" class="card-img-top" width="640" height="360" alt="@Localizer[restaurant.TitleKey]" loading="lazy" />
                        <div class="card-body d-flex flex-column">
                            <h2 class="h5">@Localizer[restaurant.TitleKey]</h2>
                            <p class="text-muted">@Localizer[restaurant.ShortDescriptionKey]</p>
                            <p class="small mb-1"><strong>@Localizer["Dining.WorkingHours"]:</strong> @Localizer[restaurant.WorkingHoursKey]</p>
                            @if (!string.IsNullOrWhiteSpace(restaurant.DressCodeKey))
                            {
                                <p class="small mb-3"><strong>@Localizer["Dining.DressCode"]:</strong> @Localizer[restaurant.DressCodeKey]</p>
                            }
                            <a class="btn btn-outline-dark mt-auto" href="@Url.Action("DiningDetail", "Site", new { culture = Model.Page.Culture, slug = restaurant.Slug })">@Localizer["Common.Details"]</a>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</section>
