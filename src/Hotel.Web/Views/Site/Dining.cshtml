@model DiningPageViewModel
@inject IStringLocalizer<SharedResource> Localizer

<section class="page-hero compact py-5 bg-light" aria-labelledby="dining-title">
    <div class="container">
        <h1 id="dining-title">@Localizer["Nav.Dining"]</h1>
        <p class="lead mb-0">@Localizer["Dining.Intro"]</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            @foreach (var restaurant in Model.Restaurants)
            {
                <div class="col-md-6 col-xl-4">
                    <article class="liquid-card h-100">
                        <div class="liquid-media">
                            <img src="@restaurant.Images.FirstOrDefault()" class="card-img-top" width="640" height="360" alt="@Localizer[restaurant.TitleKey]" loading="lazy" />
                        </div>
                        <div class="liquid-body d-flex flex-column">
                            <h2 class="liquid-title display-font h5">@Localizer[restaurant.TitleKey]</h2>
                            <div class="liquid-rule"></div>
                            <p class="liquid-desc">@Localizer[restaurant.ShortDescriptionKey]</p>
                            <div class="dining-meta mb-3">
                                <p class="small mb-1"><strong>@Localizer["Dining.WorkingHours"]:</strong> @Localizer[restaurant.WorkingHoursKey]</p>
                                @if (!string.IsNullOrWhiteSpace(restaurant.DressCodeKey))
                                {
                                    <p class="small mb-0"><strong>@Localizer["Dining.DressCode"]:</strong> @Localizer[restaurant.DressCodeKey]</p>
                                }
                            </div>
                            <div class="liquid-actions liquid-actions-single">
                                <a class="btn btn-outline-dark" href="@Url.Action("DiningDetail", "Site", new { culture = Model.Page.Culture, slug = restaurant.Slug })">@Localizer["Common.Details"]</a>
                            </div>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</section>

