@model StandardPageViewModel
@inject IStringLocalizer<SharedResource> Localizer

<section class="page-hero compact py-5 bg-light" aria-labelledby="wellness-title">
    <div class="container">
        <h1 id="wellness-title">@Localizer["Nav.Wellness"]</h1>
        <p class="lead mb-0">@Localizer["Wellness.Intro"]</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <article class="card h-100 border-0 shadow-sm">
                    <img src="~/img/hotel/wellness-spa.jpg" width="640" height="360" alt="@Localizer["Wellness.Spa.Title"]" loading="lazy" class="card-img-top" />
                    <div class="card-body">
                        <h2 class="h5">@Localizer["Wellness.Spa.Title"]</h2>
                        <p>@Localizer["Wellness.Spa.Description"]</p>
                    </div>
                </article>
            </div>
            <div class="col-md-4">
                <article class="card h-100 border-0 shadow-sm">
                    <img src="~/img/hotel/wellness-hamam.jpg" width="640" height="360" alt="@Localizer["Wellness.Hamam.Title"]" loading="lazy" class="card-img-top" />
                    <div class="card-body">
                        <h2 class="h5">@Localizer["Wellness.Hamam.Title"]</h2>
                        <p>@Localizer["Wellness.Hamam.Description"]</p>
                    </div>
                </article>
            </div>
            <div class="col-md-4">
                <article class="card h-100 border-0 shadow-sm">
                    <img src="~/img/hotel/wellness-fitness.jpg" width="640" height="360" alt="@Localizer["Wellness.Fitness.Title"]" loading="lazy" class="card-img-top" />
                    <div class="card-body">
                        <h2 class="h5">@Localizer["Wellness.Fitness.Title"]</h2>
                        <p>@Localizer["Wellness.Fitness.Description"]</p>
                    </div>
                </article>
            </div>
        </div>
        <div class="mt-4">
            <a href="#" class="btn btn-gold">@Localizer["Wellness.BookAppointment"]</a>
        </div>
    </div>
</section>
