@inject IStringLocalizer<SharedResource> Localizer

<div id="cookie-consent" class="cookie-banner" role="dialog" aria-live="polite" aria-label="Cookie Consent" hidden>
    <p class="mb-2">@Localizer["CookieConsent.Text"]</p>
    <button id="cookie-consent-accept" type="button" class="btn btn-gold btn-sm">@Localizer["CookieConsent.Accept"]</button>
</div>
